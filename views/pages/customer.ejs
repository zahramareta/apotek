<div class="container">
    <h4>Data Customer</h4>
    <hr>
    <!-- menampilkan data customer -->
    <ul class="list-group">
        <!-- forEach -> scanning isi array -->
        <% data.forEach(element => { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-success">
                            Nama
                        </small> <br>
                        <%= element.nama_customer %> 
                    </div> 

                    <div class="col-lg-3">
                        <small class="text-success">
                            Alamat
                        </small> <br>
                        <%= element.alamat %> 
                    </div>

                    <div class="col-lg-3">
                        <small class="text-success">
                            Telepon
                        </small> <br>
                        <%= element.telepon %> 
                    </div>

                    <div class="col-lg-3">
                        <small class="text-success">
                            Opsi
                        </small> <br>
                        
                        <!-- button edit -->
                        <a href="/pelanggan/edit/<%= element.id %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/pelanggan/delete/<%= element.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>
                    </div>
                </div>
            </li>
        <% }) %>  
    </ul>
    <!-- button add new data -->
    <br>
    <a href="/pelanggan/add">
        <button class="btn btn-md btn-success">
            Tambah Data
        </button>
    </a>
</div>